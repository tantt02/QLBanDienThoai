@model IEnumerable<Ontap_Net104_319.Models.CartDetails>

@{
	ViewData["Title"] = "Index";
	var inValid = TempData["Invalid"];
}

<h1>Giỏ hàng</h1>

@if (inValid != null)
{
	<div class="alert alert-info my-3" role="alert">
		Số lượng sản phẩm @inValid hiện tại không đủ , vui lòng chỉnh lại số lượng !
	</div>
}
@if (Model.Count() != 0)
{

	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Id)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ProductId)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Username)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Quantity)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Status)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ProductId)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Username)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Quantity)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Status)
					</td>
					<td>

						@Html.ActionLink("Delete", "Delete", new { id = item.Id })
					</td>

				</tr>
			}
		</tbody>
	</table>
	<div class="d-flex justify-content-end align-items-center">
		<div class="pe-3">
			<form action="@Url.Action("Index", "Product")" method="post">
				<button type="submit" class="btn btn-danger">Trở về</button>
			</form>
		</div>
		@* <div>
			<form action="@Url.Action("Pay", "Cart")" method="post">
				<button type="submit" class="btn btn-primary">Thanh toán</button>
			</form>
		</div> *@
		<div>
			<form action="@Url.Action("GetProvince", "Location")" method="post">
				<button type="submit" class="btn btn-primary">Mua hàng</button>
			</form>
		</div>
	</div>
}
else
{
	<div class="alert alert-danger" role="alert">
		Giỏ hàng không có sản phẩm để thanh toán
	</div>
}

