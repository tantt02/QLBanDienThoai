</div>

@section Styles {
    <style>
        h1 {
            color: #007bff;
            margin-bottom: 20px;
        }

        h4 {
            color: #6c757d;
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-bottom: 10px;
        }

        .btn {
            margin-top: 10px;
        }
    </style>
