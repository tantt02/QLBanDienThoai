@model IEnumerable<Ontap_Net104_319.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<style>
	html {
		line-height: 1.6rem;
		font-family: 'Roboto', sans-serif;
		box-sizing: border-box;
	}
	.star {
		position: relative;
		display: block;
		width: 16px;
		height: 16px;
		background-color: rgb(241, 200, 35);
		clip-path: polygon( 50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35% );
	}

	.star1 {
		background-color: rgb(183 169 181 / 74%);
		;
	}

	p {
		width: 280px;
		margin: 0;
	}

	.col {
		display: flex;
		justify-content: space-between;
		font-family: 'Times New Roman', Times, serif;
	}

	span {
		color: #8c7a7a;
		font-weight: 600;
	}

	.st {
		display: flex;
		justify-content: start;
		align-items: center;
		padding-bottom: 10px;
	}


	.p {
		color: #585757;
	}

	

	

	.fa-list:before {
		font-size: 17px;
	}

	a {
		text-decoration: none;
		color: unset;
	}

	.row a:hover {
		box-shadow: 0 1px 15px 0 rgba(117, 117, 117, 0.5);
		transform: translateY(-4px);
		border: 1px solid rgb(255, 0, 0);
		transition: all 0.4s;
	}

	.item-wrap {
		display: inline-block;
		text-decoration: none;
		margin-bottom: 10px;
	}

	.item {
		margin-left: 10px;
		padding: 9px;
	}

		.item > h3 {
			color: var(--text-color);
			font-size: 22px;
			line-height: 1.4;
		}

		.item > img {
			width: 100%;
		}
</style>
<div id="carouselExampleCaptions" class="carousel slide container">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/imgs/Apple-Vietnam-online-store_big.jpg.large.jpg" class="d-block" style="width:100%; height:470px" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>First slide label</h5>
                <p>Some representative placeholder content for the first slide.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/imgs/iphone-15-pro-max-1679099524652410261012.webp" class="d-block" style="width:100%; height:470px" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Second slide label</h5>
                <p>Some representative placeholder content for the second slide.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/imgs/Apple-Vietnam-online-store_big.jpg.large.jpg" class="d-block" style="width:100%; height:470px" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Third slide label</h5>
                <p>Some representative placeholder content for the third slide.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="">
    <div class="">
        <div class="col-10">
            <div class="row mx-3">
                @foreach (var item in Model)
                {
                    <div class="col-4">
                        <a asp-action="Add" asp-controller="Product" asp-route-id="@item.Id">
                          
                            <img src="./imgs/iphone-15-pro-max-titanxanh.jpg" alt="@item" width="300px" height="300px"/>
                            <p><b>@item.Name</b></p>
                            <p style="color: #725656; font-size: 17px;">Giá: @Convert.ToDouble(item.Price).ToString("N0")</p>

                            <div class="st">
                                <div class="star"></div>
                                <div class="star"></div>
                                <div class="star"></div>
                                <div class="star"></div>
                                <div class="star star1"></div>
                                <div style="color: #898888; padding-left: 10px">
                                    IMEI: @item.Id
                                </div>
                            </div>
                            <p class="p">
                                <span>Màn hình:</span> 1242 x 2688 Pixels 6.5 in...
                            </p>
                            <p class="p">
                                <span>Camera:</span> Triple 12MP Ultra Wide,...
                            </p>
                            <p class="p"><span>Pin:</span> Lâu hơn iPhone Xs Max 5h</p>
                            <p class="p"><span>RAM: </span> 4GB</p>
                            <p class="p"><span>CPU: </span> Apple A13 Bionic</p>
                            <p class="p"><span>HĐH: </span> IOS 13</p>


                        </a>

                    </div>

                }
            </div>


        </div>

    </div>
</div>
